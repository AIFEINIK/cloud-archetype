#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="${version}" encoding="UTF-8" ?>
<configuration status="off" monitorInterval="1800">
    <properties>

        <property name="LOG_PATH">/data/logs/</property>
        <property name="LOG_NAME">boot</property>
    </properties>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout
                pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread][%file:%line] - %msg%n" />
        </Console>
        <RollingRandomAccessFile name="running-log"
            fileName="${symbol_dollar}{LOG_PATH}/${symbol_dollar}{LOG_NAME}.log" filePattern="${symbol_dollar}{LOG_PATH}/${symbol_dollar}{LOG_NAME}.%d{yyyy-MM-dd}.log">
            <PatternLayout
                pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread][%file:%line] - %msg%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"
                    modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="7">
                <Delete basePath="${symbol_dollar}{LOG_PATH}/" maxDepth="2">
                    <IfFileName glob="*.log" />
                    <!--保留7天日志文件-->
                    <IfLastModified age="7d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>
    </appenders>
    <loggers>
        <root level="info">
            <appender-ref ref="running-log" />
            <appender-ref ref="Console" />
        </root>
    </loggers>
</configuration>
