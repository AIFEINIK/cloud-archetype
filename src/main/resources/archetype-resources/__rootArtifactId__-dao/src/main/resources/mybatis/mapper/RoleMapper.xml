#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="${version}" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${package}.dao.mapper.RoleMapper">

    <sql id="searchCondition">
        <where>
            <if test="userId != null">
                and u.user_id = ${symbol_pound}{userId}
            </if>
        </where>
    </sql>

    <select id="getSysRoleCount" resultType="java.lang.Integer">
        select count(*) from sys_role
        <include refid="searchCondition"/>
    </select>

    <select id="searchSysRoles" resultType="${package}.dao.entity.SysRole">
        select * from sys_user u
        left join sys_user_role ur on u.user_id = ur.user_id
        left join sys_role r on ur.role_id = r.role_id
        <include refid="searchCondition"/>
    </select>
</mapper>

